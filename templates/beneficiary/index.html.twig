{% extends 'base.html.twig' %}

{% block title %}Liste des bénéficiaires{% endblock %}

{% block body %}
    <h1>Liste des bénéficiaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Iban</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for beneficiary in beneficiaries %}
            <tr>
                <td>{{ beneficiary.id }}</td>
                <td>{{ beneficiary.iban }}</td>
                <td>
                    <a href="{{ path('beneficiary_show', {'id': beneficiary.id}) }}">afficher</a>
                    <a href="{{ path('beneficiary_edit', {'id': beneficiary.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('beneficiary_new', { 'id': app.user.id }) }}">Ajouter un bénéficiaire</a>
{% endblock %}
