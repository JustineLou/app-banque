{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<h1>Liste des utilisateurs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Password</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Birthday</th>
            <th>Compte bancaire</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            <td>
                <a href="{{ path('user_show', {'id': user.id}) }}">afficher</a>
                <a href="{{ path('user_edit', {'id': user.id}) }}">éditer</a>
            </td>

        </tr>
        {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('user_new')  }}">Ajouter un nouvel utilisateur</a>
<button type="button" class="btn btn-light"><a href="/">Retour à l'espace administrateur</a></button>


{% endblock %}